<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/imageButton_"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/classa"
            android:background="#ffffff"
            android:scaleType="fitXY"
            android:layout_marginVertical="2dp"/>

        <TextView
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This class can shape your body and help you lose weight!\nOnly $50 per month to join this class if you are our member!"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@id/imageButton_"/>

        <TextView
            android:id="@+id/textView_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/imageButton_"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>